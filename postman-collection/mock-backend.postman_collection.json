{
  "info": {
    "name": "Mock Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "ğŸ”‘ Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"username\": \"student1\", \"password\": \"123456\" }"
        },
        "url": {
          "raw": "{{base_url}}/auth/authenticate",
          "host": ["{{base_url}}"],
          "path": ["auth", "authenticate"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"auth_token\", jsonData.accessToken);",
              "pm.environment.set(\"refresh_token\", jsonData.refreshToken);",
              "pm.environment.set(\"expires_at\", jsonData.expiresAt);",
              "console.log(\"ğŸ” Access Token gespeichert:\", jsonData.accessToken);",
              "console.log(\"ğŸ”„ Refresh Token gespeichert:\", jsonData.refreshToken);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "ğŸ”„ Token Refresh",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"refreshToken\": \"{{refresh_token}}\" }"
        },
        "url": {
          "raw": "{{base_url}}/auth/refresh",
          "host": ["{{base_url}}"],
          "path": ["auth", "refresh"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"auth_token\", jsonData.accessToken);",
              "pm.environment.set(\"refresh_token\", jsonData.refreshToken);",
              "pm.environment.set(\"expires_at\", jsonData.expiresAt);",
              "console.log(\"âœ… Token erneuert. Neuer Access Token:\", jsonData.accessToken);",
              "console.log(\"ğŸ”„ Neuer Refresh Token:\", jsonData.refreshToken);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "ğŸ‘¤ Get User Data",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/user/getUserData/1",
          "host": ["{{base_url}}"],
          "path": ["user", "getUserData", "1"]
        }
      }
    },
    {
      "name": "ğŸ“… Get Calendar Data",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/user/getIcalData/1",
          "host": ["{{base_url}}"],
          "path": ["user", "getIcalData", "1"]
        }
      }
    },
    {
      "name": "ğŸ”— Get iCal URL",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/user/getIcalUrl/1",
          "host": ["{{base_url}}"],
          "path": ["user", "getIcalUrl", "1"]
        }
      }
    }
  ]
}
